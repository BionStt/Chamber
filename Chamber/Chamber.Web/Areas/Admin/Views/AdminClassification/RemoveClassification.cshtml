@using Chamber.Domain.Constants
@using Chamber.Web.Application
@model Chamber.Web.Areas.Admin.ViewModels.ClassificationViewModel

@{
    ViewBag.Title = "Remove Classification";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="pageTitle"><span style="font-weight: 800">Administration:</span> Business Classifications</h2>
            </div>
        </div>
    </div>
</section>
<br />

<div class="row">
    <div class="col-md-3 col-sm-3">
        @Html.Partial("_AddClassification", Model)
    </div>
    <div class="col-md-5 col-sm-5">
        <div class="col-md-12">
            <p><i class="fa fa-save"></i> <span style="font-weight: 800;">Update Classification</span></p>
            <div style="border:1px solid #3b5998"></div>
        </div>
        <div class="col-md-12">


            @using (Html.BeginForm("EditClassification", "AdminClassification", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <br />
                <div class="form-group">
                    <label for="FirstName">Name</label>
                    @Html.TextBoxFor(x => x.EditName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="FirstName">Description</label>
                    @Html.TextAreaFor(x => x.EditDescription, new { @style = "resize:none", @class = "form-control", rows = 3, cols = 50, maxlength = 999 })
                </div>
                <div class="submit-holder">
                    <div class="col-md-6">
                        @Html.HiddenFor(x => x.ClassificationId)
                        <button type="submit" class="btn btn-default">Update Classification</button>
                    </div>
                    <div class="col-md-6">
                        <a href="@Url.Action("Classification", "AdminClassification")" class="btn btn-danger">Nevermind, No Update</a>
                    </div>
                </div>
            }

        </div>
    </div>
    <div class="col-md-3 col-sm-3">
        <div class="row">
            @Html.Partial("_ClassificationDashboard", Model)
        </div>
    </div>
</div>