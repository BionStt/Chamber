@model Chamber.Web.ViewModels.BusinessViewModel

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="pageTitle">Business</h2>
            </div>
        </div>
    </div>
</section>


<section id="content">
    <div class="container content">
        <!-- Service Blcoks -->
        <div class="row">
            <div class="col-md-12">
                <article class="item column-1">
                    <header class="item_header">
                        <h3>@Html.DisplayFor(m => m.Name)</h3>
                    </header>
                    <!-- Introtext -->
                    <div>
                        <p>@Html.DisplayFor(m => m.Description)</p>
                    </div>
                    <!-- info BOTTOM -->
                </article><!-- end item -->
            </div>
        </div>

        <hr class="margin-bottom-50">

        <!-- Info Blcoks -->
        <div class="row">
            <div class="col-sm-3 info-blocks">
                <div class="info-blocks-in">
                    <img class="img-business" src="@AppHelpers.BusinessImage(Model.Avatar, Model.Id, SiteConstants.Instance.GravatarProfileSize)" alt="@Model.Name"><br />
                </div>
            </div>
            <div class="col-sm-5 info-blocks">
                <i class="icon-info-blocks fa fa-building-o"></i>
                <div class="info-blocks-in">
                    <h3><u>Business Location</u></h3>
                    <p>
                        @if (Model.PhysicalAddress != null)
                    {
                        @Html.DisplayFor(m => m.PhysicalAddress)<br />
                    }
                    @Html.DisplayFor(m => m.PhysicalCity), @Html.DisplayFor(m => m.PhyscialState) @Html.DisplayFor(m => m.PhysicalZipcode)
                </p>
                <h3><u>Business Phone</u></h3>
                <p>@Html.DisplayFor(m => m.Phone) </p>
                <h3><u>Business Website</u></h3>
                <p>@Html.DisplayFor(m => m.WebAddress)</p>
            </div>
        </div>
        <div class="col-sm-4 info-blocks">
            <i class="icon-info-blocks fa fa-users"></i>
            <div class="info-blocks-in">
                <h3><u>Business Contacts</u></h3>
                @foreach (var contact in Model.businessContacts)
                {
                    <p>
                        @contact.FirstName @contact.LastName<br />
                        @if (contact.PrimaryPhone != null)
                        {
                            @contact.PrimaryPhone<br />
                        }
                        @contact.Email
                    </p>
                        <hr />
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <div class="submit-holder">
                <div class="col-md-4 col-md-offset-2">
                    <a href="@Url.Action("Directory", "Business")" class="btn btn-default">New Business Search</a>
                </div>
                <div class="col-md-4 col-md-offset-2">
                    <a href="@Url.Action("Individual", "Business")" class="btn btn-default">New Individual Search</a>
                </div>
            </div>
        </div>
    </div>
</div>
</section>
