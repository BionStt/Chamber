@model Chamber.Web.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="pageTitle">Forgot Password</h2>
            </div>
        </div>
    </div>
</section>


<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @Html.Partial("_GenericMessage")
        @using (Html.BeginForm("ForgotPassword", "Members", FormMethod.Post, new { @class = "form-forgotpassword" }))
        {

            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()

            <h3>@ViewBag.Title</h3>

            <div class="form-group">
                <label for="Email">Email Address</label>
                @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", type = "email" })
                @Html.ValidationMessageFor(m => m.EmailAddress)
            </div>

                    <div class="submit-holder">
                        <button type="submit" class="btn btn-default">Request Password</button>
                    </div>
        }
    </div>
</div>
<br /><br />