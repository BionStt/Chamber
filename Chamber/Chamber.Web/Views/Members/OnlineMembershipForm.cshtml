
@{
    ViewBag.Title = "Online Membership Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="pageTitle">Chamber Membership Form</h2>
            </div>
        </div>
    </div>
</section>
<br />
<div class="row">
    <div class="col-md-3 col-sm-3">
        <div class="col-md-12">
            <p><i class="fa fa-sitemap"></i> <span style="font-weight: 800;">Registration Step 1 of 4</span> </p>
            <div style="border:1px solid #3b5998"></div>
        </div>
        <div class="col-md-12">
            <div class="panel-group">
                <div class="panel">
                    <div class="panel-body">
                        Enter your organization/business name and mailing address.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-5 col-sm-5">
        <div class="row">
            <div class="col-md-12">
                <p><i class="fa fa-building-o"></i> <span style="font-weight: 800;">Organization Information</span> </p>
                <div style="border:1px solid #3b5998"></div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="FirstName">Name</label>
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
