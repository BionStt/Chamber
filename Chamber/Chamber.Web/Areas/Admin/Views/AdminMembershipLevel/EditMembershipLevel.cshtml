@using Chamber.Domain.Constants
@using Chamber.Web.Application
@model Chamber.Web.Areas.Admin.ViewModels.MembershipLevelViewModel

@{
    ViewBag.Title = "Edit Membership Level";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="pageTitle"><span style="font-weight: 800">Administration:</span> Membership Levels</h2>
            </div>
        </div>
    </div>
</section>
<br />

<div class="row">
    <div class="col-md-3 col-sm-3">
        @Html.Partial("_AddMembershipLevel", Model)
    </div>
    <div class="col-md-5 col-sm-5">
        <div class="col-md-12">
            <p><i class="fa fa-save"></i> <span style="font-weight: 800;">Update Membership Level</span></p>
            <div style="border:1px solid #3b5998"></div>
        </div>
        <div class="col-md-12">


            @using (Html.BeginForm("EditMembershipLevel", "AdminMembershipLevel", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <br />
                <div class="form-group">
                    <label for="FirstName">Name</label>
                    @Html.TextBoxFor(x => x.EditName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="FirstName">Description</label>
                    @Html.TextAreaFor(x => x.EditDescription, new { @style = "resize:none", @class = "form-control", rows = 3, cols = 50, maxlength = 999 })
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="FirstName">Employee Max</label>
                            @Html.TextBoxFor(x => x.EditEmployeeMax, new { @class = "form-control" })
                        </div>
                        <div class="col-md-4">
                            <label for="FirstName">Annual Price</label>
                            @Html.TextBoxFor(x => x.EditAnnualPrice, new { @class = "form-control" })
                        </div>
                        <div class="col-md-4">
                            <label for="FirstName">Semi Annual Price</label>
                            @Html.TextBoxFor(x => x.EditSemiAnnualPrice, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="submit-holder">
                    <div class="col-md-4">
                        @Html.HiddenFor(x => x.MembershipLevelId)
                        <button type="submit" class="btn btn-success">Update Membership Level</button>
                    </div>
                    <div class="col-md-4">
                        <a href="@Url.Action("MembershipLevel", "AdminMembershipLevel")" class="btn btn-default">Nevermind, No Update</a>
                    </div>
                    <div class="col-md-4">
                        <a href="@Url.Action("MembershipLevel", "AdminMembershipLevel")" class="btn btn-danger">Remove Membership Level</a>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-3 col-sm-3">
        <div class="row">
            @Html.Partial("_MembershipLevelDashboard", Model)
        </div>
    </div>
</div>